* {
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}

body {
  margin: 0;
  background: #f3f7fb;
}

.container {
  max-width: 720px;
  margin: auto;
  padding: 20px;
}

.card {
  background: #fff;
  border-radius: 18px;
  padding: 25px;
  margin-bottom: 20px;
  box-shadow: 0 10px 25px rgba(0,0,0,.06);
}

.hero {
  text-align: center;
  background: linear-gradient(135deg,#0f2027,#203a43,#2c5364);
  color: #fff;
}

.hero span {
  color: #00e5ff;
}

.hero p {
  margin: 12px 0 20px;
}

h2 {
  color: #203a43;
  margin-bottom: 15px;
}

label {
  font-size: 14px;
  margin-top: 10px;
  display: block;
}

input, textarea {
  width: 100%;
  padding: 12px;
  border-radius: 12px;
  border: 1px solid #ccc;
  margin-top: 6px;
}

textarea {
  resize: none;
  height: 80px;
}

.btn {
  padding: 12px 26px;
  border-radius: 30px;
  border: none;
  font-weight: 600;
  cursor: pointer;
}

.submit {
  width: 100%;
  margin-top: 15px;
  background: #00e5ff;
  color: #00333a;
}

.locked {
  background: #999;
  color: #fff;
  cursor: not-allowed;
}

.unlocked {
  background: #00e5ff;
  color: #00333a;
}

small {
  display: block;
  margin-top: 10px;
  opacity: .8;
}

.rules {
  padding-left: 20px;
}

.rules li {
  margin-bottom: 8px;
}
